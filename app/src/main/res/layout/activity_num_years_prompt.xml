<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_num_years_prompt"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.howmuchwillyoumake.howmuchwillyoumake.NumYearsPrompt">


    <!-- BOTTOM BUTTONS-->
    <LinearLayout
        android:id="@+id/buttons_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="0dp"
        android:layout_marginLeft="0dp"
        android:orientation="horizontal"
        android:weightSum="3"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/output_layout">

        <Button
            android:id="@+id/start_over_from_button_numyearsprompt"
            android:text="Start Over"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/add_entry_button_numyearsprompt"
            android:text="Add Entry"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/calculate_button_numyearsprompt"
            android:text="Continue"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_weight="1"/>
    </LinearLayout>


    <TextView
        android:id="@+id/num_years_prompt_tv_1"
        android:text="Find out how much you will make in"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:layout_marginBottom="56dp"
        android:layout_above="@+id/num_years_prompt_tv_2"
        android:layout_alignStart="@+id/buttons_layout" />

    <TextView
        android:id="@+id/num_years_prompt_tv_2"
        android:text="year(s)."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:layout_below="@+id/num_of_years_ed"
        android:layout_alignParentEnd="true" />

    <Button
        android:id="@+id/view_all_entries_button_numyearsprompt"
        android:text="VIEW ALL ENTRIES"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/buttons_layout"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="-5dp"/>

    <EditText
        android:id="@+id/num_of_years_ed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:textSize="30dp"
        android:gravity="center"
        android:layout_marginTop="151dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
